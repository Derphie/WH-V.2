@{
     ViewBag.Title = "Asistență Academică | WorkHub";
}

<div style="background: white; margin-top: 90px;">
     <div class="container">
          <h1 style="text-align: center; color: #2c3e50;">Sprijin pentru Studenți</h1>

          <div style="max-width: 800px; margin: 0 auto;">
               <div style="background: #fff8e1; padding: 15px; border-left: 4px solid #ffc107; margin-bottom: 20px;">
                    <strong>Important:</strong> Oferim consultanță și îndrumare, nu lucrări gata făcute.
               </div>

               <h2 style="color: #3498db;">Discipline acoperite</h2>
               <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-bottom: 30px;">
                    <span style="background: #e3f2fd; padding: 8px 15px; border-radius: 20px;">Programare</span>
                    <!-- Adaugă mai multe discipline -->
               </div>

               <h2 style="color: #3498db;">Tipuri de ajutor</h2>
               <ul style="columns: 2; column-gap: 40px;">
                    <li>Explicații individuale</li>
                    <li>Rezolvare teme</li>
                    <li>Pregătire examene</li>
                    <li>Consultanta proiecte</li>
               </ul>

               <div style="text-align: center; margin-top: 40px;">
                    <a href="@Url.Action("Index", "Chat")" style="display: inline-block; padding: 12px 30px; background: #4caf50; color: white; text-decoration: none; border-radius: 4px; font-size: 18px;">Contactează un tutor</a>
               </div>
          </div>
     </div>
</div>