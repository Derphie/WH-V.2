@{
     ViewBag.Title = "Servicii Traduceri | WorkHub";
}

<section style="background: white; margin-top: 90px; min-height: 80vh;">
     <div class="container">
          <h1 style="text-align: center; color: #2c3e50;">Traduceri Autorizate</h1>
          <p style="text-align: center; max-width: 700px; margin: 0 auto 30px;">Traduceri profesionale în peste 30 de limbi străine</p>

          <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px;">
               <div style="background: #f8f9fa; padding: 20px; border-radius: 8px;">
                    <h3 style="margin-top: 0;">Tehnice</h3>
                    <p>Manual, documentații, specificații</p>
               </div>
               <!-- Adaugă mai multe categorii aici -->
          </div>

          <div style="margin-top: 40px; background: #e8f4fc; padding: 20px; border-radius: 8px;">
               <h3>Cum funcționează?</h3>
               <ol>
                    <li>Încărcați documentul</li>
                    <li>Selectați combinația de limbi</li>
                    <li>Primiți oferta de preț în 24h</li>
                    <li>Livrare la termenul stabilit</li>
               </ol>
          </div>
     </div>
</section>